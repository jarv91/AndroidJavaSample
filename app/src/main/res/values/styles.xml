<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.Title">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/title_size_xxl</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/button_padding_left_right_default</item>
        <item name="android:paddingStart">@dimen/button_padding_left_right_default</item>
        <item name="android:paddingEnd">@dimen/button_padding_left_right_default</item>
        <item name="android:paddingRight">@dimen/button_padding_left_right_default</item>
    </style>

    <style name="Button.Primary">

    </style>

</resources>
